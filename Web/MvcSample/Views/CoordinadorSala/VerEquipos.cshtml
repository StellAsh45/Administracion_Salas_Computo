@using System
@model IList<Services.Models.ModelosComputador.ModeloComputador>

@{
    ViewData["Title"] = "Gesti√≥n de equipos";
}

<div class="equipos-table-container">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>Equipos disponibles</h2>
            <p>Bloquea, libera o asigna equipos a los usuarios</p>
        </div>
        <div class="acciones-derecha">
            <a class="btn-agregar-equipo" asp-action="AsignarEquipo" asp-controller="CoordinadorSala">
                <i class="bi bi-send-check me-1"></i>Asignar Equipo
            </a>
            <a class="btn-agregar-equipo" asp-action="Principal" asp-controller="CoordinadorSala">
                <i class="bi bi-arrow-left me-1"></i>Volver
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <table class="table equipos-table">
        <thead>
            <tr>
                <th>Equipo</th>
                <th>Estado</th>
                <th>Sala</th>
                <th class="text-end">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model == null || Model.Count == 0)
            {
                <tr>
                    <td colspan="4" class="text-center text-muted py-4">No hay equipos registrados</td>
                </tr>
            }
            else
            {
                foreach (var equipo in Model)
                {
                    <tr>
                        <td>@equipo.Nombre</td>
                        <td>
                            @{
                                var estado = equipo.Estado ?? "Desconocido";
                                var estadoClase = estado?.ToLowerInvariant() switch
                                {
                                    "disponible" => "tag tag-disponible",
                                    "ocupado" => "tag tag-ocupado",
                                    "bloqueado" => "tag tag-bloqueado",
                                    _ => "tag tag-mantenimiento"
                                };
                            }
                            <span class="@estadoClase">@estado</span>
                        </td>
                        <td>@(string.IsNullOrWhiteSpace(equipo.SalaDisplay) ? "Sin sala" : equipo.SalaDisplay)</td>
                        <td class="text-end">
                            @if (!string.Equals(equipo.Estado, "Bloqueado", StringComparison.OrdinalIgnoreCase))
                            {
                                <form asp-action="BloquearEquipo" asp-controller="CoordinadorSala" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@equipo.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Bloquear equipo">
                                        <i class="bi bi-slash-circle me-1"></i>Bloquear
                                    </button>
                                </form>
                            }

                            @if (!string.Equals(equipo.Estado, "Disponible", StringComparison.OrdinalIgnoreCase))
                            {
                                <form asp-action="LiberarEquipo" asp-controller="CoordinadorSala" method="post" class="d-inline ms-2">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@equipo.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-success" title="Liberar equipo">
                                        <i class="bi bi-unlock me-1"></i>Liberar
                                    </button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

