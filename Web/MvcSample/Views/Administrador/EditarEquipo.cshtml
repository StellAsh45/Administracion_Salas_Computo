@model Services.Models.ModelosComputador.ModeloComputador

@{
    ViewData["Title"] = "Editar equipo";
}
<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg p-4" style="max-width: 600px; width:100%;">

        <!-- Ícono de la sala -->
        <div class="d-flex justify-content-center mb-3">
            <div class="icon-bg">
                <i class="bi bi-door-open-fill fs-2 text-primary"></i>
            </div>
        </div>
        <h2 class="text-black mb-2 text-center">Editar Equipo</h2>

        <form asp-action="EditarEquipo" asp-controller="Administrador" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Nombre" class="text-dark">Nombre del equipo</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Estado" class="text-dark">Estado</label>
                <select asp-for="Estado" class="form-control">
                    <option value="" disabled>-- Selecciona un estado --</option>
                    <option value="Disponible">Disponible</option>
                    <option value="Mantenimiento">Mantenimiento</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SalaId" class="text-dark">Sala</label>
                <select asp-for="SalaId" class="form-control" asp-items="ViewBag.Salas" id="SalaId">
                    <option value="">-- No asignada --</option>
                </select>
                <span asp-validation-for="SalaId" class="text-danger"></span>
            </div>

            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <button type="submit" class="btn btn-primary">Guardar</button>
            <a class="btn btn-light text-primary fw-bold" asp-controller="Administrador" asp-action="VerEquipos">Volver</a>
        </form>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
