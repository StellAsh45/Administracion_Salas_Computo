@model IList<Services.Models.ModelosSala.ModeloSala>

@{
    ViewData["Title"] = "Salas registradas";
}

<h2>Salas registradas</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<p>
    <a class="btn btn-primary fw-bold" asp-controller="Administrador" asp-action="RegistroSala">Registrar sala</a>
    <a class="btn btn-light text-primary fw-bold" asp-controller="Administrador" asp-action="Principal">Volver</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Número de Salón</th>
            <th>Capacidad (Equipos)</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sala in Model)
        {
            <tr>
                <td>@sala.NumeroSalon</td>
                <td>@sala.Capacidad</td>
                <td>@sala.Estado</td>
                <td>
                    <a class="btn btn-sm btn-secondary" asp-controller="Administrador" asp-action="EditarSala" asp-route-id="@sala.Id">Editar</a>

                    <form asp-controller="Administrador" asp-action="BorrarSala" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@sala.Id" />
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('¿Está seguro que desea eliminar la sala @sala.NumeroSalon?');">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>