@using System.Linq
<div class="salas-table-container">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>Salas registradas</h2>
            <p>Administra las salas y su estado</p>
        </div>
        <div class="acciones-derecha">
            <a class="btn-agregar-sala" asp-controller="Administrador" asp-action="RegistroSala">
                <i class="bi bi-plus-lg me-1"></i>Agregar Sala
            </a>

            <a class="btn-agregar-sala" asp-controller="Administrador" asp-action="Principal">
                <i class="bi me-1"></i>Volver
            </a>
        </div>

    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <table class="table salas-table">
        <thead>
            <tr>
                <th>Número de Salón</th>
                <th>Capacidad (Equipos)</th>
                <th>Estado</th>
                <th>PCs asignados</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sala in Model)
            {
                <tr>
                    <td>@sala.NumeroSalon</td>
                    <td>@sala.Capacidad</td>
                    <td>
                        @if (sala.Estado == "Disponible")
                        {
                            <span class="tag tag-disponible">Disponible</span>
                        }
                        else
                        {
                            <span class="tag tag-mantenimiento">Mantenimiento</span>
                        }
                    </td>
                    <td>
                        @{
                            var pcs = sala.Computadores as IEnumerable<Services.Models.ModelosComputador.ModeloComputador> ?? new List<Services.Models.ModelosComputador.ModeloComputador>();
                            var nombres = pcs.Where(p => !string.IsNullOrWhiteSpace(p.Nombre))
                                             .Select(p => p.Nombre)
                                             .ToList();
                        }
                        @if (nombres.Any())
                        {
                            @string.Join(", ", nombres)
                        }
                        else
                        {
                            <span>No asignados</span>
                        }
                    </td>
                    <td>

                       <a class="icon-btn" asp-controller="Administrador" asp-action="EditarSala" asp-route-id="@sala.Id">
                            <i class="bi bi-pencil"></i>
                       </a>

                        <form asp-controller="Administrador"
                              asp-action="BorrarSala"
                              method="post"
                              style="display:inline;">

                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@sala.Id" />

                            <button type="submit"
                                    class="icon-btn delete"
                                    onclick="return confirm('¿Está seguro que desea eliminar la sala @sala.NumeroSalon?');">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
