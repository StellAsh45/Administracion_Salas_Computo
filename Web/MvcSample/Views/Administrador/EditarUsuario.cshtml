@model Services.Models.ModelosUsuario.ModeloUsuario

@{
    ViewData["Title"] = "Editar usuario";
}

<h2>Editar usuario</h2>

<form asp-action="EditarUsuario" asp-controller="Administrador" method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Correo"></label>
        <input asp-for="Correo" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Contrasena"></label>
        <input asp-for="Contrasena" class="form-control" type="password" />
        <span asp-validation-for="Contrasena" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rol"></label>
        <select asp-for="Rol" class="form-control">
            <option value="" selected disabled>-- Selecciona un rol --</option>
            <option value="Usuario" selected="@Model.Rol == " Usuario"">Usuario</option>
            <option value="Coordinador de Sala" selected="@Model.Rol == " Coordinador de Sala"">Coordinador de Sala</option>
            <option value="Administrador" selected="@Model.Rol == " Administrador"">Administrador</option>
        </select>
        <span asp-validation-for="Rol" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a class="btn btn-link" asp-controller="Administrador" asp-action="VerUsuarios">Volver</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
