@model IList<Services.Models.ModelosUsuario.ModeloUsuario>

@{
    ViewData["Title"] = "Usuarios registrados";
}

<div class="usuarios-container">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3>Gestión de Usuarios</h3>
            <p>Administra los usuarios y sus permisos</p>
        </div>
        <div>
            <a class="btn-agregar" asp-controller="Administrador" asp-action="RegistroUsuarios">
                <i class="bi bi-plus-lg me-1"></i>Agregar Usuario
            </a>
            <a class="btn-agregar" asp-controller="Administrador" asp-action="Principal">
                <i class="bi me-1"></i>Volver
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <table class="table usuarios-table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Correo</th>
                <th>Rol</th>
                <th>Acciones</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var u in Model)
            {
                <tr class="@(u.Rol == "Usuario" ? "fila-resaltada" : "")">
                    <td>@u.Nombre</td>
                    <td>@u.Correo</td>
                    <td>
                        @if (u.Rol == "Administrador")
                        {
                            <span class="tag tag-admin">Administrador</span>
                        }
                        else if (u.Rol == "Coordinador de Sala")
                        {
                            <span class="tag tag-coord">Coordinador de Sala</span>
                        }
                        else
                        {
                            <span class="tag tag-usuario">Usuario</span>
                        }
                    </td>

                    <td>
                        <a class="icon-btn" asp-controller="Administrador" asp-action="EditarUsuario" asp-route-id="@u.Id">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a class="icon-btn delete" asp-controller="Administrador" asp-action="BorrarUsuario" asp-route-id="@u.Id">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
