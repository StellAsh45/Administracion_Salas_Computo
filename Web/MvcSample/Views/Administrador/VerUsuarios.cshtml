@model IList<Services.Models.ModelosUsuario.ModeloUsuario>

@{
    ViewData["Title"] = "Usuarios registrados";
}

<h2>Usuarios registrados</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<p>
    <a class="btn btn-primary fw-bold" asp-controller="Administrador" asp-action="RegistroUsuarios">Registrar usuario</a>
    <a class="btn btn-light text-primary fw-bold" asp-controller="Administrador" asp-action="Principal">Volver</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Contraseña</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Nombre</td>
                <td>@u.Correo</td>
                <td>@u.Contrasena</td>
                <td>@u.Rol</td>
                <td>
                    <a class="btn btn-sm btn-secondary" asp-controller="Administrador" asp-action="EditarUsuario" asp-route-id="@u.Id">Editar</a>

                    <form asp-controller="Administrador" asp-action="BorrarUsuario" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@u.Id" />
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('¿Esta seguro que desea eliminar al usuario @u.Nombre ?');">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
