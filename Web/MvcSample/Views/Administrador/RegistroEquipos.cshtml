@model Services.Models.ModelosComputador.AñadirModeloComputador

@{
    ViewData["Title"] = "Registro de equipos";
}

<div class="asignacion-wrapper">
    <div class="asignacion-card shadow">

        <!-- Encabezado con icono -->
        <div class="d-flex justify-content-center mb-3">
            <div class="icon-bg">
                <i class="bi bi-pc-display fs-2 text-primary"></i>
            </div>
        </div>

        <h2 class="fw-bold text-center mb-2">Registro de equipos</h2>
        <p class="text-muted text-center mb-4">
            Completa el formulario para registrar un nuevo equipo
        </p>
        <form asp-action="RegistroEquipos" asp-controller="Administrador" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label asp-for="Nombre" class="text-black">Nombre del equipo</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Estado" class="text-black">Estado del equipo</label>
                <select asp-for="Estado" class="form-control">
                    <option value="" selected disabled>-- Selecciona un estado --</option>
                    <option value="Disponible">Disponible</option>
                    <option value="Mantenimiento">Mantenimiento</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="SalaId" />

            <div asp-validation-summary="All" class="text-danger"></div>

            <button type="submit" class="btn btn-primary">Registrar equipo</button>

            <a class="btn btn-light text-primary fw-bold"
               asp-controller="Administrador"
               asp-action="VerEquipos">
                Volver
            </a>

        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
