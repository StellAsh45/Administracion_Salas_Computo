@model Services.Models.ModelosComputador.AñadirModeloComputador

@{
    ViewData["Title"] = "Registro de equipos";
}

<h2>Registro de equipos</h2>

<form asp-action="RegistroEquipos" asp-controller="Administrador" method="post">
    @Html.AntiForgeryToken()

    <!-- Estado del equipo -->
    <div class="form-group">
        <label asp-for="Estado" class="text-white">Estado del equipo</label>
        <select asp-for="Estado" class="form-control">
            <option value="" selected disabled>-- Selecciona un estado --</option>
            <option value="Disponible">Disponible</option>
            <option value="Ocupado">Ocupado</option>
            <option value="Mantenimiento">Mantenimiento</option>
        </select>
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>

    <!-- Sala donde está ubicado el equipo -->
    <div class="form-group">
        <label asp-for="SalaId" class="text-white">Ubicación (Sala)</label>
        <select asp-for="SalaId" class="form-control" asp-items="ViewBag.Salas">
            <option value="" selected disabled>-- Selecciona la sala del equipo --</option>
        </select>
        <span asp-validation-for="SalaId" class="text-danger"></span>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <button type="submit" class="btn btn-primary">Registrar equipo</button>

    <a class="btn btn-light text-primary fw-bold"
       asp-controller="Administrador"
       asp-action="VerEquipos">
        Volver
    </a>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
