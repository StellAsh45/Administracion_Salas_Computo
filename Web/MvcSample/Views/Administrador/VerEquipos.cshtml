@model IList<Services.Models.ModelosComputador.ModeloComputador>

<div class="equipos-table-container">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>Equipos registrados</h2>
            <p>Añade equipos a una sala y administra su estado</p>
        </div>
        <div class="acciones-derecha">
            <a class="btn-agregar-equipo" asp-controller="Administrador" asp-action="RegistroEquipos">
                <i class="bi bi-plus-lg me-1"></i>Agregar Equipo
            </a>
            <a class="btn-agregar-equipo" asp-controller="Administrador" asp-action="Principal">
                <i class="bi me-1"></i>Volver
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <table class="table equipos-table">
        <thead>
            <tr>
                <th>ID del Equipo</th>
                <th>Estado</th>
                <th>Sala</th>
                <th>Acciones</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var equipo in Model)
            {
                <tr>
                    <td>@equipo.Id</td>
                    <td>
                        @if (equipo.Estado == "Disponible")
                        {
                            <span class="tag tag-disponible">Disponible</span>
                        }
                        else
                        {
                            <span class="tag tag-mantenimiento">Mantenimiento</span>
                        }
                    </td>
                    <td>@(string.IsNullOrWhiteSpace(equipo.SalaDisplay) ? "No asignada" : equipo.SalaDisplay)</td>
                    <td>
                        <a class="icon-btn" asp-controller="Administrador" asp-action="EditarEquipo" asp-route-id="@equipo.Id">
                            <i class="bi bi-pencil"></i>
                        </a>

                        <form asp-controller="Administrador" asp-action="BorrarEquipo" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@equipo.Id" />
                            <button type="submit" class="icon-btn delete" onclick="return confirm('¿Está seguro que desea eliminar el equipo con ID @equipo.Id?');">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>