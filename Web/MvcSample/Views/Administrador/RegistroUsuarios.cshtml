@model Services.Models.ModelosUsuario.AñadirModeloUsuario

@{
    ViewData["Title"] = "Registro de usuarios";
}
<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg p-4" style="max-width: 600px; width:100%;">

        <!-- Ícono de usuarios -->
        <div class="text-center mb-3">
            <div class="icon-wrapper mb-2">
                <i class="bi bi-people-fill" style="font-size: 3rem; color:#0d6efd;"></i>
            </div>
        </div>

        <h2 class="text-dark mb-4 text-center">Registro de usuarios</h2>

        <form asp-action="RegistroUsuarios" asp-controller="Administrador" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label asp-for="Nombre" class="text-dark"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Correo" class="text-dark"></label>
                <input asp-for="Correo" class="form-control" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="contrasena" class="text-dark">Contraseña</label>
                <input asp-for="Contrasena" class="form-control" type="password" />
                <span asp-validation-for="Contrasena" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Rol" class="text-dark">Rol</label>
                <select asp-for="Rol" class="form-control">
                    <option value="" selected disabled>-- Selecciona un rol --</option>
                    <option value="Usuario">Usuario</option>
                    <option value="Coordinador de Sala">Coordinador de Sala</option>
                    <option value="Administrador">Administrador</option>
                </select>
                <span asp-validation-for="Rol" class="text-danger"></span>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

            <button type="submit" class="btn btn-primary">Registrar</button>
            <a class="btn btn-light text-primary fw-bold" asp-controller="Administrador" asp-action="VerUsuarios">Volver</a>
    
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
