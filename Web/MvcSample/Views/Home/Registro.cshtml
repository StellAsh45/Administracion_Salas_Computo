@model Services.Models.ModelosUsuario.AñadirModeloUsuario

@{
    ViewData["Title"] = "Registro";
}

<h2>Registro</h2>

<form asp-action="Registro" asp-controller="Home" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Correo"></label>
        <input asp-for="Correo" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Contrasena"></label>
        <input asp-for="Contrasena" class="form-control" type="password" />
        <span asp-validation-for="Contrasena" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rol">Rol (opcional)</label>
        <input asp-for="Rol" class="form-control" />
        <small class="form-text text-muted">Si no indicas rol se asignará 'Usuario'.</small>
    </div>

    <button type="submit" class="btn btn-primary">Registrar</button>
    <a class="btn btn-link" href="@Url.Action("Index", "Home")">Volver</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
