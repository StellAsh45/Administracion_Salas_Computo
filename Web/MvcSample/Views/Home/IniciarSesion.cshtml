@{
    ViewData["Title"] = "Home Page";
}

@if (ViewBag.Success != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Success
    </div>
}

<div class="row">
    <div class="col-md-6">
        <h3>Información</h3>
        <p>Bienvenido al sistema de administración de salas.</p>
    </div>
    <div class="col-md-6">
        <h3>Iniciar sesión</h3>
    <div class="col-md-6">
            <form asp-action="IniciarSesion" asp-controller="Home" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="correo">Correo</label>
                <input name="correo" id="correo" class="form-control" />
            </div>

            <div class="form-group">
                <label for="contrasena">Contraseña</label>
                <input name="contrasena" id="contrasena" type="password" class="form-control" />
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="text-danger">
                    @foreach (var err in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <div>@err.ErrorMessage</div>
                    }
                </div>
            }

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">Entrar</button>
                </div>
            </form>
    </div>
</div>
