@using System.Linq
@model IList<Services.Models.ModelosSala.ModeloSala>

@{
    ViewData["Title"] = "Salas disponibles";
}

<div class="equipos-table-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>Salas disponibles</h2>
            <p>Consulta capacidad, estado y equipos registrados</p>
        </div>
        <a class="btn-agregar-equipo" asp-action="Principal" asp-controller="Usuario">
            <i class="bi bi-arrow-left me-1"></i>Volver
        </a>
    </div>

    <table class="table equipos-table">
        <thead>
            <tr>
                <th>NÃºmero</th>
                <th>Capacidad</th>
                <th>Estado</th>
                <th>Equipos registrados</th>
                <th>Disponible</th>
            </tr>
        </thead>
        <tbody>
            @if (Model == null || Model.Count == 0)
            {
                <tr>
                    <td colspan="5" class="text-center text-muted py-4">No hay salas registradas</td>
                </tr>
            }
            else
            {
                foreach (var sala in Model)
                {
                    var registrados = sala.Computadores?.Count ?? 0;
                    var disponibles = sala.Computadores?.Count(c => c.Estado == "Disponible") ?? 0;
                    var estadoSala = sala.Estado ?? "Desconocido";
                    var estadoClase = estadoSala == "Disponible" ? "tag tag-disponible" : "tag tag-mantenimiento";
                    <tr>
                        <td>@sala.NumeroSalon</td>
                        <td>@sala.Capacidad</td>
                        <td><span class="@estadoClase">@estadoSala</span></td>
                        <td>@registrados</td>
                        <td>@disponibles</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

