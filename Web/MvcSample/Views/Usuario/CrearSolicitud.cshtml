@model Services.Models.ModelosSolicitud.AñadirModeloSolicitud

@{
    ViewData["Title"] = "Solicitud de equipo";
    var tipo = ViewBag.TipoSolicitud as string ?? "Asignación de equipo";
    var salas = ViewBag.Salas as SelectList ?? new SelectList(Enumerable.Empty<SelectListItem>());
    var computadores = ViewBag.Computadores as SelectList ?? new SelectList(Enumerable.Empty<SelectListItem>());
}

<div class="asignacion-wrapper">
    <div class="asignacion-card shadow">

        <!-- Encabezado -->
        <div class="d-flex align-items-center mb-4">
            <div class="icon-bg me-3">
                <i class="bi bi-pc-display fs-2 text-primary"></i>
            </div>
            <div>
                <h2 class="fw-bold m-0">@tipo</h2>
                <p class="text-muted m-0">Completa el formulario y envía tu solicitud al coordinador</p>
            </div>
        </div>

        <form asp-action="CrearSolicitud" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="tipo" value="@Model.Tipo" />

            <div class="row">
                @if (tipo.ToLower() == "liberacion")
                {
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold">Sala</label>
                        @Html.DropDownListFor(m => m.SalaId, salas, "-- Selecciona una Sala --", new { @class = "form-select", id = "salaSelect", @disabled = "disabled" })
                        <input type="hidden" asp-for="SalaId" />
                        <small class="text-muted">Sala del equipo que estás usando</small>
                    </div>
                }
                else
                {
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-semibold">Sala</label>
                        @Html.DropDownListFor(m => m.SalaId, salas, "-- Selecciona una Sala --", new { @class = "form-select", id = "salaSelect" })
                        <small class="text-muted">@(tipo.ToLower() == "asignacion" || tipo.ToLower() == "prestamo" ? "Primero selecciona la sala" : "Selecciona la sala")</small>
                    </div>
                }

                <div class="col-md-6 mb-3">
                    <label asp-for="ComputadorId" class="form-label fw-semibold">Equipo</label>
                    @{
                        var tieneSala = Model.SalaId.HasValue;
                        var tieneEquipos = computadores != null && computadores.Any();
                        var puedeSeleccionar = tieneSala && tieneEquipos;
                    }
                    @if (tipo.ToLower() == "liberacion")
                    {
                        @Html.DropDownListFor(m => m.ComputadorId, computadores, "-- Selecciona un equipo --", new { @class = "form-select", id = "computadorSelect", @disabled = "disabled" })
                        <input type="hidden" asp-for="ComputadorId" />
                        <small class="text-muted">Equipo que estás usando actualmente</small>
                    }
                    else if (puedeSeleccionar)
                    {
                        @Html.DropDownListFor(m => m.ComputadorId, computadores, "-- Selecciona un equipo --", new { @class = "form-select", id = "computadorSelect" })
                        <span asp-validation-for="ComputadorId" class="text-danger"></span>
                        <small class="text-muted">Luego selecciona el equipo disponible de la sala</small>
                    }
                    else
                    {
                        @Html.DropDownListFor(m => m.ComputadorId, computadores, "-- Selecciona un equipo --", new { @class = "form-select", id = "computadorSelect", @disabled = "disabled" })
                        <span asp-validation-for="ComputadorId" class="text-danger"></span>
                        <small class="text-muted">Primero debes seleccionar una sala</small>
                    }
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="FechaInicio" class="form-label fw-semibold">Fecha y Hora de Inicio</label>
                    <input asp-for="FechaInicio" type="datetime-local" class="form-control custom-input" value="@(Model.FechaInicio.ToString("yyyy-MM-ddTHH:mm"))">
                    <span asp-validation-for="FechaInicio" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="FechaFin" class="form-label fw-semibold">Fecha y Hora de Finalización</label>
                    <input asp-for="FechaFin" type="datetime-local" class="form-control custom-input" value="@(Model.FechaFin.ToString("yyyy-MM-ddTHH:mm"))">
                    <span asp-validation-for="FechaFin" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label fw-semibold">Descripción / Observaciones</label>
                <textarea asp-for="Descripcion"
                          class="form-control custom-input"
                          rows="4"
                          placeholder="Motivo, horario o detalles adicionales"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="d-flex gap-3 mt-3">
                <button type="submit" class="btn btn-primary px-4">
                    <i class="bi bi-send-check me-1"></i> Enviar solicitud
                </button>

                <a asp-action="Principal" class="btn btn-light text-primary fw-bold px-4">Cancelar</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Actualizar equipos cuando se selecciona una sala (para Asignacion y Prestamo)
        var salaSelect = document.getElementById('salaSelect');
        var computadorSelect = document.getElementById('computadorSelect');
        
        if (salaSelect && computadorSelect) {
            salaSelect.addEventListener('change', function() {
                var salaId = this.value;
                if (salaId) {
                    // Recargar la página con la sala seleccionada para actualizar los equipos
                    var url = new URL(window.location.href);
                    url.searchParams.set('salaId', salaId);
                    window.location.href = url.toString();
                } else {
                    // Si no hay sala, deshabilitar y limpiar el select de equipos
                    computadorSelect.disabled = true;
                    computadorSelect.value = '';
                }
            });
            
            // Al cargar, deshabilitar si no hay sala seleccionada
            document.addEventListener('DOMContentLoaded', function() {
                if (!salaSelect.value) {
                    computadorSelect.disabled = true;
                }
            });
        }
    </script>
}



