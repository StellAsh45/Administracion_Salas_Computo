@using System.Security.Claims

<ul class="navbar-nav">
    @if (User?.Identity?.IsAuthenticated ?? false)
    {
        <li class="nav-item">
            @{
                // Obtener rol y usuario desde claims (fallbacks)
                var roleClaim = User.FindFirstValue(ClaimTypes.Role) ?? string.Empty;
                var email = User.FindFirstValue(ClaimTypes.Email)
                ?? User.Identity?.Name
                ?? User.FindFirstValue(ClaimTypes.NameIdentifier)
                ?? "usuario";

                string roleDisplay = roleClaim switch
                {
                    "Coordinador de Sala" => "Coordinador de Sala",
                    "Administrador" => "Administrador",
                    "Usuario" => "Usuario",
                };
            }
            <span class="nav-link text-dark">Bienvenido @roleDisplay @email</span>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Home" asp-action="CerrarSesion" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Cerrar sesión</button>
            </form>
        </li>
    }
</ul>